<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <TextView
        android:id="@+id/txt_select_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/current_location" />

    <Button
        android:id="@+id/btn_abnormal_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/abnormal_submit" />

    <RelativeLayout
        android:id="@+id/layout_pop_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/btn_abnormal_submit"
        android:layout_toRightOf="@id/txt_select_shop"
        android:background="@drawable/login_inputbox"
        android:paddingLeft="5dp" >

        <!--
                 <TextView
